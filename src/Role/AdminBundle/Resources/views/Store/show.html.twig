{% extends 'RoleAdminBundle::layout.html.twig' %}
{% set active = "stores" %}
{% block pageContainer %}
<h1>Store</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Publicname</th>
            <td>{{ entity.publicName }}</td>
        </tr>
        <tr>
            <th>Legalname</th>
            <td>{{ entity.legalName }}</td>
        </tr>
        <tr>
            <th>Slugname</th>
            <td>{{ entity.slugName }}</td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Updatedat</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_store') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_store_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('admin_store_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
